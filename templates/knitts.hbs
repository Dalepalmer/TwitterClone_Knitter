<div class='row'>
  <div class='col-md-6'>
    <form>
      <div class="form-group">
        <label for="username">Input your username</label>
        {{input id="username" class="form-control" value=username}}
      </div>
      <div class="form-group">
        <label for="body">Write A Knitt</label>
        {{textarea id="body" class="form-control" rows="4" value=body}}
      </div>
      <button class="btn btn-primary" {{action 'newKnitt'}}> Post a knitt</button>
    </form>
  </div>

  <div class='col-md-6'>
    <h1>Trending Knitts</h1>
    <ul>
      {{#each}}
        <li {{action "toggleDate" on="mouseEnter"}}>{{username}}: {{body}}</li>

        {{#if isExpanded}}
          {{date}}bgyh uji
        {{/if}}

      {{/each}}

    </ul>
  </div>
</div>
